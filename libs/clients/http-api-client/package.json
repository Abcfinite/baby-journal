{
  "name": "@abcfinite/http-api-client",
  "version": "0.0.4",
  "author": "abraham cole finite <abrahamfinite@gmail.com>",
  "main": ".index.ts",
  "dependencies": {
    "@types/follow-redirects": "^1.14.4",
    "axios": "^1.7.8",
    "type-safe-validator": "^1.0.32"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.{js,ts}",
      "<rootDir>/index.ts"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{js,ts}"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": ".",
    "moduleDirectories": [
      "node_modules",
      "test",
      "src"
    ]
  },
  "scripts": {
    "build": "tsc"
  }
}